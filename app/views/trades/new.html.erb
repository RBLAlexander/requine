<h1>New Trade<h1>

<div class='form-container'?>
	<%= form_for :trade, url: trades_path do |f| %>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :description %><br>
			<%= f.text_area :description %>
		</p>
		<p>
			<%= f.label :tags %><br>
			<%= f.text_field :tags %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>
</div>
